<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Modelo de la bicicleta -->
        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modelo de la Bicicleta"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000000"
            android:paddingBottom="8dp" />

        <!-- Imagen de la bicicleta -->
        <ImageView
            android:id="@+id/iv1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:contentDescription="Imagen de la bicicleta"
            android:scaleType="fitCenter"
            android:src="@drawable/bici1" />

        <!-- Descripción de la bicicleta -->
        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripción breve de la bicicleta"
            android:textSize="14sp"
            android:textColor="#666666"
            android:paddingTop="8dp"
            android:paddingBottom="16dp" />

        <!-- Precio de la bicicleta -->
        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precio: $00.00"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#FF5722"
            android:paddingBottom="16dp" />

        <!-- Botón para agregar al carrito -->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/detailBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#FF5722"
                android:onClick="irAlDetalle"
                android:text="Ver detalle"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
